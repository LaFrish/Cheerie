<h2> You are feeling <%= @feeling.name %> </h2>
<h2> Well let's see if we can fix that!</h2>


<button><%= link_to "Create New Cheerup", new_feeling_cheerup_path(@feeling) %></button>
<button><%= link_to "Vent abt it", new_feeling_post_path(@feeling) %></button>
<button><%= link_to "Back to Feeling", feelings_path(@feeling) %></button>

<div class="container">
  <section>
    <h3>Giftastic</h3>
    <% @gifs.each do |gif| %>
      <%= image_tag gif.img_url %>
      <% end %>
    </br>
      <button><%= link_to "Add A Gif", new_feeling_cheerup_path(@feeling) %></button>

    </section>

    <section>
    <h3>Quotes and such</h3>
    <% @imgs.each do |img| %>
      <%= img.name %>
      <%= image_tag img.img_url %>
      <% end %>
    </br>
      <button><%= link_to "Add A Quote", new_feeling_cheerup_path(@feeling) %></button>
    </section>

    <section>
    <h3>Talk it out on VentPost!</h3>

    <% @feeling.posts.each do |post| %>
    <h3><%= link_to post.title, feeling_post_path(@feeling, post) %></h3>
    <p><%= post.body %></p>
    <% end %>
  </br>
  <button><%= link_to "Add a vent!", new_feeling_post_path(@feeling) %></button>
  </section>
</div>
